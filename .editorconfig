# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = tab
tab_width = 4
#indent_style = space
#indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[{package.json,*.yml}]
indent_style = space
indent_size = 2

#[*.js]
#indent_style = space
#indent_size = 2
